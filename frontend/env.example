# CloudGate Frontend Configuration

# Keycloak SSO Configuration (Frontend needs this for authentication)
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
NEXT_PUBLIC_KEYCLOAK_REALM=cloudgate
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=cloudgate-frontend

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8081

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-minimum-32-characters-long
NEXTAUTH_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Email Configuration (Frontend handles email sending via nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_FROM=CloudGate <noreply@cloudgate.com>

# Email Templates
EMAIL_VERIFICATION_SUBJECT=Verify your CloudGate email address
EMAIL_FROM_NAME=CloudGate SSO

# Frontend Session Configuration
SESSION_TIMEOUT=3600
REFRESH_TOKEN_TIMEOUT=86400

# Security Headers
ENABLE_SECURITY_HEADERS=true

# Logging
LOG_LEVEL=info

# Image Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Development Configuration
NEXT_PUBLIC_DEV_MODE=true 